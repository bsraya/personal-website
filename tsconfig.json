{
  "extends": "astro/tsconfigs/base",
  "include": [
    ".astro/types.d.ts",
    "**/*"
  ],
  "exclude": [
    "dist"
  ],
  "baseUrl": "./src",
  "typeRoots": [
    "./src/types",
    "./node-modules/@types",
  ],
  "compilerOptions": {
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@chart/*": ["src/components/chart/*"],
      "@mdxComponents/*": ["src/components/mdx/*"],
      "@utils/*": ["src/utils/*"],
      "@layout/*": ["src/layouts/*"],
    },
    "types": [
      "astro/client",
    ]
  }
}