---
const props = Astro.props;
import { Image } from "astro:assets";
---

{
    props.title ?
        <figure class="w-full my-5">
            <Image
                src={props.src}
                alt={props.alt}
                title={props.title}
                width={700}
                height={500}
                class="w-full mb-1"
                loading="lazy"
            />
            <figcaption class="image-caption text-center text-slate-400">Figure: {props.title}</figcaption>
        </figure>
    :
        <Image
            src={props.src}
            alt={props.alt}
            title={props.title}
            width={700}
            height={500}
            class="w-full my-5"
            loading="lazy"
        />
}


<style>
    .image-caption {
        font-family: var(--font-heading);
    }
</style>