---
const props = Astro.props;
---

{
    props.title ?
        <figure class="w-full my-5">
            <img {...props} class="w-full mb-1" decoding="async" loading="lazy"/>
            <figcaption class="image-caption text-center text-slate-400">Figure: {props.title}</figcaption>
        </figure>
    :
        <img {...props} class="w-full my-5" />
}


<style>
    .image-caption {
        font-family: var(--font-heading);
    }
</style>