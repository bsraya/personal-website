---
import "../styles/global.css";
import Head from "@component/Head.astro";
import Footer from "@component/Footer.astro";
import BackToTop from "@component/BackToTop";
import Navigation from "@component/Navigation.astro";

const { 
  pageTitle,
  pageDescription,
  keywords
} = Astro.props;
---

<!doctype html>
<html lang="en" data-theme="lofi">
  <Head
		pageTitle={pageTitle}
		pageDescription={pageDescription}
		keywords={keywords}
	/>
	<body class="h-full mx-auto max-w-2xl p-5">
    <Navigation />
    <slot />
    <BackToTop client:only="solid" />
    <Footer />
  </body>
</html>
